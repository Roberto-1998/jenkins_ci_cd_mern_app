{
  "env": { "node": true, "es2021": true, "jest": true },
  "extends": [
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"]
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/*.test.js"],
      "env": { "jest": true },
      "rules": {
        "node/no-unpublished-require": "off"
      }
    }
  ]
}
